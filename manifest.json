{
  "manifest_version": 3,
  "name": "Headline Analyzer",
  "version": "1.0",
  "description": "Analyzes H1â€“H6 headings on the current page using the side panel.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
